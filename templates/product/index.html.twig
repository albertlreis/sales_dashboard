{% extends 'base.html.twig' %}

{% block title %}Produtos{% endblock %}

{% block body %}
    <h1>Productos</h1>

    <table>
        <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Categoria</th>
            <th>Ações</th>
        </tr>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.category.name }}</td>
                <td>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
